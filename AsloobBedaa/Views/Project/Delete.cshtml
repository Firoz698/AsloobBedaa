@model AsloobBedaa.Models.Project

@{
    ViewData["Title"] = "Delete Project";
}

<h2>Delete Project</h2>

<h4>Are you sure you want to delete this project?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Project Name</dt>
        <dd class="col-sm-10">@Model.ProjectName</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate?.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate?.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Budget</dt>
        <dd class="col-sm-10">@Model.Budget?.ToString("C")</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="ProjectID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>
