@using AsloobBedaa.Models.Letter
@model IEnumerable<LetterTemplate>

@{
    ViewData["Title"] = "Letter Templates";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0">Letter Templates</h4>
        <a asp-action="Create" class="btn btn-primary btn-sm">
            + Create New Letter
        </a>
    </div>

    <div class="card-body">
        <table class="table table-bordered table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Letter Type</th>
                    <th>Created By</th>
                    <th>Created Date</th>
                    <th style="width:180px;">Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int sl = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@sl</td>
                        <td>@item.Title</td>
                        <td>@item.LetterType?.Name</td>
                        <td>@item.CreatedBy</td>
                        <td>@item.CreatedDate.ToString("dd-MMM-yyyy")</td>
                        <td>
                            <a asp-action="Preview" asp-route-id="@item.Id"
                               class="btn btn-sm btn-info">
                                Preview
                            </a>

                            <a asp-action="Edit" asp-route-id="@item.Id"
                               class="btn btn-sm btn-warning">
                                Edit
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.Id"
                               class="btn btn-sm btn-danger"
                               onclick="return confirm('Are you sure?')">
                                Delete
                            </a>
                        </td>
                    </tr>
                    sl++;
                }
            </tbody>
        </table>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">
                No Letter Template Found.
            </div>
        }
    </div>
</div>
