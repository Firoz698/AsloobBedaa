@{
    ViewData["Title"] = "Login - AsloobBedaa";
}

<style>
    body {
        background: linear-gradient(135deg, #f0f4ff, #e8f5e9);
        font-family: 'Segoe UI', sans-serif;
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .login-card {
        background: #ffffff;
        border-radius: 18px;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
        width: 400px;
        padding: 45px 35px;
    }

    .login-logo {
        display: block;
        margin: 0 auto 20px auto;
        width: 260px;
    }

    .login-header {
        text-align: center;
        font-size: 20px;
        font-weight: 600;
        color: #212529;
        margin-bottom: 30px;
    }

    .form-label {
        font-size: 14px;
        font-weight: 500;
        color: #495057;
    }

    .form-control {
        border-radius: 8px;
        padding: 12px;
        font-size: 14px;
        border: 1px solid #ced4da;
    }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.15rem rgba(13, 110, 253, 0.25);
        }

    .btn-login {
        background: linear-gradient(135deg, #0d6efd, #0b5ed7);
        border: none;
        border-radius: 8px;
        color: #fff;
        font-weight: 600;
        width: 100%;
        padding: 12px;
        margin-top: 10px;
        transition: all 0.3s ease;
        box-shadow: 0 6px 15px rgba(13, 110, 253, 0.35);
    }

        .btn-login:hover {
            background: linear-gradient(135deg, #0b5ed7, #084298);
            box-shadow: 0 8px 20px rgba(13, 110, 253, 0.45);
        }

    .alert {
        font-size: 14px;
    }
</style>

<div class="login-container">
    <div class="login-card">

        <img src="~/images/header_logo.jpg" alt="AsloobBedaa Logo" class="login-logo" />

        <div class="login-header">
            Sign in to your account
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @ViewBag.Error
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Login Form -->
        <form asp-action="Login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input type="text" class="form-control" name="username" required />
                <div class="invalid-feedback">
                    Username is required.
                </div>
            </div>

            <div class="mb-4">
                <label class="form-label">Password</label>
                <input type="password" class="form-control" name="password" required />
                <div class="invalid-feedback">
                    Password is required.
                </div>
            </div>

            <button type="submit" class="btn-login">
                Login
            </button>
        </form>

    </div>
</div>

@section Scripts {
    <script>
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}
