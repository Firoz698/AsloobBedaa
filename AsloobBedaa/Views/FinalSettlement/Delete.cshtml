@model FinalSettlement

@{
    ViewData["Title"] = "Delete Settlement";
}

<h2 class="text-danger">Delete Confirmation</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this settlement record?
</div>

<table class="table table-bordered">
    <tr><th>Employee Name</th><td>@Model.EmployeeName</td></tr>
    <tr><th>Project Name</th><td>@Model.ProjectName</td></tr>
    <tr><th>Net Settlement</th><td>@Model.NetSettlementAmount</td></tr>
</table>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="SettlementId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
