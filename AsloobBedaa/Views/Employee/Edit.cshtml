@model AsloobBedaa.Models.Employee

@{
    ViewData["Title"] = "Edit Employee";
}

<h2 class="mb-3">Edit Employee</h2>

<hr />

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="EmployeeID" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Position" class="form-label"></label>
        <input asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="HourlyRate" class="form-label"></label>
        <input asp-for="HourlyRate" class="form-control" />
        <span asp-validation-for="HourlyRate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="OvertimeRate" class="form-label"></label>
        <input asp-for="OvertimeRate" class="form-control" />
        <span asp-validation-for="OvertimeRate" class="text-danger"></span>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-success">
            Update
        </button>

        <a asp-action="Index" class="btn btn-secondary">
            Cancel
        </a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
