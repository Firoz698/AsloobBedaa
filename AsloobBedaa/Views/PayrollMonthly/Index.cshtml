@model IEnumerable<AsloobBedaa.Models.PayrollMonthly>

@{
    ViewData["Title"] = "Payroll Monthly";
}

<h2>Payroll Monthly</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New Payroll</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Month</th>
            <th>Project Name</th>
            <th>Employees</th>
            <th>Basic Salary</th>
            <th>Overtime</th>
            <th>Allowances</th>
            <th>Deductions</th>
            <th>Net Cost</th>
            <th>WPS Status</th>
            <th>Remarks</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PayrollId</td>
                <td>@item.Month.ToString("MMM-yyyy")</td>
                <td>@item.ProjectName</td>
                <td>@item.NumberOfEmployees</td>
                <td>@item.BasicSalary.ToString("C")</td>
                <td>@item.Overtime.ToString("C")</td>
                <td>@item.Allowances.ToString("C")</td>
                <td>@item.Deductions.ToString("C")</td>
                <td>@item.NetPayrollCost.ToString("C")</td>
                <td>@item.WpsStatus</td>
                <td>@item.Remarks</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@item.PayrollId">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.PayrollId">Delete</a>
                    <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.PayrollId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
