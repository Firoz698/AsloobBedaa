@model AsloobBedaa.Models.PayrollCSVModel

@{
    ViewData["Title"] = "Import Payroll Records";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <!-- Page Header -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                        <div>
                            <h2 class="mb-1 text-primary">
                                <i class="fas fa-file-upload me-2"></i>Import Payroll Records
                            </h2>
                            <p class="text-muted mb-0">Upload CSV or Excel file to import monthly payroll data</p>
                        </div>
                        <div class="d-flex gap-2">
                            <a asp-action="DownloadTemplate" class="btn btn-outline-primary">
                                <i class="fas fa-download me-2"></i>Download Template
                            </a>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Alert Messages -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    <strong>Success!</strong> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <strong>Error!</strong> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Upload Section -->
            <div class="row mb-4">
                <div class="col-lg-8 col-xl-6 mx-auto">
                    <div class="card shadow-sm border-0">
                        <div class="card-body p-4">
                            <form asp-action="UploadCSV" method="post" enctype="multipart/form-data" id="uploadForm">
                                @Html.AntiForgeryToken()
                                <div class="upload-area text-center p-5 border-dashed rounded" id="uploadArea">
                                    <div class="upload-icon mb-3">
                                        <i class="fas fa-cloud-upload-alt fa-4x text-primary"></i>
                                    </div>
                                    <h5 class="mb-2">Drag & Drop your file here</h5>
                                    <p class="text-muted mb-3">or click to browse</p>
                                    <input type="file"
                                           name="file"
                                           id="fileInput"
                                           accept=".csv,.xlsx,.xls"
                                           class="d-none"
                                           required>
                                    <button type="button" class="btn btn-primary" onclick="document.getElementById('fileInput').click()">
                                        <i class="fas fa-folder-open me-2"></i>Choose File
                                    </button>
                                    <div class="mt-3">
                                        <small class="text-muted">
                                            Supported formats: CSV, XLSX, XLS (Max 10MB)
                                        </small>
                                    </div>
                                </div>

                                <div id="fileInfo" class="mt-3 d-none">
                                    <div class="alert alert-info d-flex align-items-center">
                                        <i class="fas fa-file-excel fa-2x me-3 text-success"></i>
                                        <div class="flex-grow-1">
                                            <strong id="fileName"></strong>
                                            <div class="small text-muted" id="fileSize"></div>
                                        </div>
                                        <button type="button" class="btn btn-sm btn-outline-danger" onclick="removeFile()">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                </div>

                                <div class="d-grid mt-4">
                                    <button type="submit" class="btn btn-primary btn-lg" id="uploadBtn" disabled>
                                        <i class="fas fa-upload me-2"></i>Upload & Preview
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Instructions Card -->
                    <div class="card shadow-sm border-0 mt-4">
                        <div class="card-body">
                            <h6 class="card-title text-primary mb-3">
                                <i class="fas fa-info-circle me-2"></i>Import Instructions
                            </h6>
                            <ul class="mb-0 small">
                                <li>Download the template file to see the required format</li>
                                <li>Fill in payroll details: Month, ProjectName, Employees, Salaries, etc.</li>
                                <li>Existing records (matched by Month + ProjectName) will be updated</li>
                                <li>New records will be added to the system</li>
                                <li><strong>Required fields:</strong> Month and ProjectName</li>
                                <li>NetPayrollCost will be calculated automatically</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Results Section -->
            @if (Model != null && (Model.MatchedPayrolls.Any() || Model.NonMatchedPayrolls.Any()))
            {
                <div class="row">
                    <div class="col-12">
                        <div class="card shadow-sm border-0">
                            <div class="card-header bg-white border-bottom py-3">
                                <h5 class="mb-0">
                                    <i class="fas fa-list-alt me-2"></i>Upload Preview
                                </h5>
                            </div>
                            <div class="card-body">
                                <!-- Statistics -->
                                <div class="row g-3 mb-4">
                                    <div class="col-md-4">
                                        <div class="stat-card bg-primary bg-gradient text-white p-3 rounded">
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-calculator fa-2x me-3"></i>
                                                <div>
                                                    <h3 class="mb-0">@(Model.MatchedPayrolls.Count + Model.NonMatchedPayrolls.Count)</h3>
                                                    <small>Total Records</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="stat-card bg-success bg-gradient text-white p-3 rounded">
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-plus-circle fa-2x me-3"></i>
                                                <div>
                                                    <h3 class="mb-0">@Model.NonMatchedPayrolls.Count</h3>
                                                    <small>New Records</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="stat-card bg-warning bg-gradient text-white p-3 rounded">
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-edit fa-2x me-3"></i>
                                                <div>
                                                    <h3 class="mb-0">@Model.MatchedPayrolls.Count</h3>
                                                    <small>Will Be Updated</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Summary Cards -->
                                <div class="row g-3 mb-4">
                                    <div class="col-md-6">
                                        <div class="card border-success">
                                            <div class="card-body">
                                                <h6 class="text-success">
                                                    <i class="fas fa-chart-line me-2"></i>Total Basic Salary
                                                </h6>
                                                <h4 class="mb-0">@((Model.MatchedPayrolls.Sum(x => x.BasicSalary) + Model.NonMatchedPayrolls.Sum(x => x.BasicSalary)).ToString("N2")) AED</h4>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="card border-info">
                                            <div class="card-body">
                                                <h6 class="text-info">
                                                    <i class="fas fa-users me-2"></i>Total Employees
                                                </h6>
                                                <h4 class="mb-0">@(Model.MatchedPayrolls.Sum(x => x.NumberOfEmployees) + Model.NonMatchedPayrolls.Sum(x => x.NumberOfEmployees))</h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Tabs -->
                                <ul class="nav nav-tabs mb-3" role="tablist">
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#newRecords" type="button">
                                            <i class="fas fa-plus-circle me-2"></i>New Records (@Model.NonMatchedPayrolls.Count)
                                        </button>
                                    </li>
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#existingRecords" type="button">
                                            <i class="fas fa-edit me-2"></i>Existing Records (@Model.MatchedPayrolls.Count)
                                        </button>
                                    </li>
                                </ul>

                                <div class="tab-content">
                                    <!-- New Records Tab -->
                                    <div class="tab-pane fade show active" id="newRecords">
                                        @if (Model.NonMatchedPayrolls.Any())
                                        {
                                            <div class="table-responsive">
                                                <table class="table table-hover align-middle">
                                                    <thead class="table-light">
                                                        <tr>
                                                            <th>#</th>
                                                            <th>Month</th>
                                                            <th>Project Name</th>
                                                            <th>Employees</th>
                                                            <th>Basic Salary</th>
                                                            <th>Overtime</th>
                                                            <th>Allowances</th>
                                                            <th>Deductions</th>
                                                            <th>Net Cost</th>
                                                            <th>WPS Status</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model.NonMatchedPayrolls.Select((p, i) => new { Payroll = p, Index = i + 1 }))
                                                        {
                                                            var netCost = item.Payroll.BasicSalary + item.Payroll.Overtime + item.Payroll.Allowances - item.Payroll.Deductions;
                                                            <tr>
                                                                <td>@item.Index</td>
                                                                <td>
                                                                    <strong>@item.Payroll.Month.ToString("MMM-yyyy")</strong>
                                                                </td>
                                                                <td>@item.Payroll.ProjectName</td>
                                                                <td>
                                                                    <span class="badge bg-info">@item.Payroll.NumberOfEmployees</span>
                                                                </td>
                                                                <td class="text-end">@item.Payroll.BasicSalary.ToString("N2")</td>
                                                                <td class="text-end">@item.Payroll.Overtime.ToString("N2")</td>
                                                                <td class="text-end text-success">+@item.Payroll.Allowances.ToString("N2")</td>
                                                                <td class="text-end text-danger">-@item.Payroll.Deductions.ToString("N2")</td>
                                                                <td class="text-end">
                                                                    <strong>@netCost.ToString("N2")</strong>
                                                                </td>
                                                                <td>
                                                                    @if (!string.IsNullOrEmpty(item.Payroll.WpsStatus))
                                                                    {
                                                                        <span class="badge bg-@(item.Payroll.WpsStatus.ToLower() == "completed" ? "success" : "warning")">
                                                                            @item.Payroll.WpsStatus
                                                                        </span>
                                                                    }
                                                                    else
                                                                    {
                                                                        <span class="text-muted">-</span>
                                                                    }
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="text-center py-5">
                                                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                                <p class="text-muted">No new records to add</p>
                                            </div>
                                        }
                                    </div>

                                    <!-- Existing Records Tab -->
                                    <div class="tab-pane fade" id="existingRecords">
                                        @if (Model.MatchedPayrolls.Any())
                                        {
                                            <div class="alert alert-warning">
                                                <i class="fas fa-exclamation-triangle me-2"></i>
                                                These records already exist and will be <strong>updated</strong> with the new information.
                                            </div>
                                            <div class="table-responsive">
                                                <table class="table table-hover align-middle">
                                                    <thead class="table-light">
                                                        <tr>
                                                            <th>#</th>
                                                            <th>Month</th>
                                                            <th>Project Name</th>
                                                            <th>Employees</th>
                                                            <th>Basic Salary</th>
                                                            <th>Overtime</th>
                                                            <th>Allowances</th>
                                                            <th>Deductions</th>
                                                            <th>Net Cost</th>
                                                            <th>WPS Status</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model.MatchedPayrolls.Select((p, i) => new { Payroll = p, Index = i + 1 }))
                                                        {
                                                            var netCost = item.Payroll.BasicSalary + item.Payroll.Overtime + item.Payroll.Allowances - item.Payroll.Deductions;
                                                            <tr>
                                                                <td>@item.Index</td>
                                                                <td>
                                                                    <strong>@item.Payroll.Month.ToString("MMM-yyyy")</strong>
                                                                </td>
                                                                <td>@item.Payroll.ProjectName</td>
                                                                <td>
                                                                    <span class="badge bg-info">@item.Payroll.NumberOfEmployees</span>
                                                                </td>
                                                                <td class="text-end">@item.Payroll.BasicSalary.ToString("N2")</td>
                                                                <td class="text-end">@item.Payroll.Overtime.ToString("N2")</td>
                                                                <td class="text-end text-success">+@item.Payroll.Allowances.ToString("N2")</td>
                                                                <td class="text-end text-danger">-@item.Payroll.Deductions.ToString("N2")</td>
                                                                <td class="text-end">
                                                                    <strong>@netCost.ToString("N2")</strong>
                                                                </td>
                                                                <td>
                                                                    @if (!string.IsNullOrEmpty(item.Payroll.WpsStatus))
                                                                    {
                                                                        <span class="badge bg-@(item.Payroll.WpsStatus.ToLower() == "completed" ? "success" : "warning")">
                                                                            @item.Payroll.WpsStatus
                                                                        </span>
                                                                    }
                                                                    else
                                                                    {
                                                                        <span class="text-muted">-</span>
                                                                    }
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="text-center py-5">
                                                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                                <p class="text-muted">No existing records to update</p>
                                            </div>
                                        }
                                    </div>
                                </div>

                                <!-- Import Button -->
                                <div class="d-flex justify-content-end gap-2 mt-4">
                                    <a asp-action="ImportCSV" class="btn btn-outline-secondary">
                                        <i class="fas fa-times me-2"></i>Cancel
                                    </a>
                                    <form asp-action="ImportPayrolls" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-success btn-lg" onclick="return confirm('Are you sure you want to import these payroll records?')">
                                            <i class="fas fa-check me-2"></i>Confirm Import
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

