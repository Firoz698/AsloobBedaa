@model PayrollMonthly

@{
    ViewData["Title"] = "Delete Payroll";
}

<h2 class="text-danger">Delete Confirmation</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this payroll record?
</div>

<table class="table table-bordered">
    <tr><th>Month</th><td>@Model.Month</td></tr>
    <tr><th>Project</th><td>@Model.ProjectName</td></tr>
    <tr><th>Net Payroll</th><td>@Model.NetPayrollCost</td></tr>
</table>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="PayrollId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
