@model AsloobBedaa.Models.Permission.Menu

@{
    ViewData["Title"] = "Edit Menu";
}

<h2>Edit Menu</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-2">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="ControllerName"></label>
        <input asp-for="ControllerName" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="ActionName"></label>
        <input asp-for="ActionName" class="form-control" />
    </div>

    <!-- ✅ ICON FIELD -->
    <div class="form-group mb-2">
        <label asp-for="Icon">Menu Icon</label>
        <div class="input-group">
            <span class="input-group-text">
                <i id="iconPreview" class="@Model.Icon"></i>
            </span>
            <input asp-for="Icon"
                   class="form-control"
                   placeholder="e.g. bi bi-house or fa fa-user"
                   oninput="updateIcon(this.value)" />
        </div>
        <small class="text-muted">
            Example: <code>bi bi-house</code>, <code>bi bi-gear</code>, <code>fa fa-user</code>
        </small>
    </div>

    <div class="form-group mb-2">
        <label>Parent Menu</label>
        <select asp-for="ParentId"
                class="form-control"
                asp-items="@(new SelectList(ViewBag.Parents, "Id", "Title"))">
            <option value="">-- None --</option>
        </select>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsActive" class="form-check-input" />
        <label class="form-check-label">Is Active</label>
    </div>

    <button type="submit" class="btn btn-success mt-2">Save</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Back</a>
</form>

@section Scripts {
    <script>
        function updateIcon(iconClass) {
            document.getElementById('iconPreview').className = iconClass;
        }
    </script>
}
