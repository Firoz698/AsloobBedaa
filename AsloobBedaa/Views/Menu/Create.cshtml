@model AsloobBedaa.Models.Permission.Menu

@{
    ViewData["Title"] = "Create Menu";
}

<h2>Create Menu</h2>

<form asp-action="Create" method="post">

    <div class="form-group mb-2">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="ControllerName"></label>
        <input asp-for="ControllerName" class="form-control" />
        <span asp-validation-for="ControllerName" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="ActionName"></label>
        <input asp-for="ActionName" class="form-control" />
        <span asp-validation-for="ActionName" class="text-danger"></span>
    </div>

    <!-- ✅ ICON FIELD -->
    <div class="form-group mb-2">
        <label asp-for="Icon">Menu Icon</label>
        <div class="input-group">
            <span class="input-group-text">
                <i id="iconPreview" class="bi bi-question-circle"></i>
            </span>
            <input asp-for="Icon"
                   class="form-control"
                   placeholder="e.g. bi bi-house or fa fa-user"
                   oninput="updateIcon(this.value)" />
        </div>
        <small class="text-muted">
            Example: <code>bi bi-house</code>, <code>bi bi-gear</code>, <code>fa fa-user</code>
        </small>
    </div>

    <div class="form-group mb-2">
        <label>Parent Menu</label>
        <select asp-for="ParentId"
                class="form-control"
                asp-items="@(new SelectList(ViewBag.Parents, "Id", "Title"))">
            <option value="">-- None --</option>
        </select>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsActive" class="form-check-input" checked />
        <label asp-for="IsActive" class="form-check-label">Is Active</label>
    </div>

    <button type="submit" class="btn btn-success mt-2">
        <i class="bi bi-plus-circle"></i> Create
    </button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Back</a>
</form>

@section Scripts {
    <script>
        function updateIcon(iconClass) {
            const preview = document.getElementById('iconPreview');
            preview.className = iconClass ? iconClass : 'bi bi-question-circle';
        }
    </script>
}
