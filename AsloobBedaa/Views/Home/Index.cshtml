@model IEnumerable<AsloobBedaa.Models.DashboardKpi>
@using AsloobBedaa.Models
@{
    ViewBag.Title = "Dashboard";
    var dashboardKpis = Model.ToList();
}

<h2 class="mb-4">Dashboard</h2>

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>KPI</th>
                    <th>Current Month</th>
                    <th>Previous Month</th>
                    <th>YTD</th>
                    <th>Status</th>
                    <th>Remarks</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var kpi in dashboardKpis)
                {
                    <tr>
                        <td>@kpi.KpiName</td>
                        <td>@kpi.CurrentMonth</td>
                        <td>@kpi.PreviousMonth</td>
                        <td>@kpi.YearToDate</td>
                        <td>@kpi.Status</td>
                        <td>@kpi.Remarks</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@* Summary KPIs for other metrics *@
<div class="row mt-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">Active Projects</h5>
                <p class="card-text">@ViewBag.ActiveProjects ?? 0</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Monthly Payroll Cost</h5>
                <p class="card-text">@ViewBag.MonthlyPayroll ?? 0</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3">
            <div class="card-body">
                <h5 class="card-title">Accounts Receivable</h5>
                <p class="card-text">@ViewBag.AccountsReceivable ?? 0</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-danger mb-3">
            <div class="card-body">
                <h5 class="card-title">Accounts Payable</h5>
                <p class="card-text">@ViewBag.AccountsPayable ?? 0</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-3">
        <div class="card text-white bg-secondary mb-3">
            <div class="card-body">
                <h5 class="card-title">Pending Final Settlements</h5>
                <p class="card-text">@ViewBag.PendingSettlements ?? 0</p>
            </div>
        </div>
    </div>
</div>

