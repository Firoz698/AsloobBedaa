@model IEnumerable<AsloobBedaa.Models.DashboardKpi>

@{
    ViewBag.Title = "Dashboard";
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>KPI</th>
                    <th>Current Month</th>
                    <th>Previous Month</th>
                    <th>YTD</th>
                    <th>Status</th>
                    <th>Remarks</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var kpi in Model)
                    {
                        <tr>
                            <td>@kpi.KpiName</td>
                            <td>@kpi.CurrentMonth</td>
                            <td>@kpi.PreviousMonth</td>
                            <td>@kpi.YearToDate</td>
                            <td>
                                <span class="badge
                                            @(kpi.Status == "Increase" ? "bg-success" :
                                                                            kpi.Status == "Decrease" ? "bg-danger" : "bg-secondary")">
                            @kpi.Status
                        </span>
                    </td>
                    <td>@kpi.Remarks</td>
                </tr>
                                }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">
                            No KPI data available
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<hr />

<div class="row mt-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body text-center">
                <h6 class="card-title">Active Projects</h6>
                <h4>@(ViewBag.ActiveProjects ?? 0)</h4>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-body text-center">
                <h6 class="card-title">Monthly Payroll Cost</h6>
                <h4>
                    @(string.Format("{0:N2}", ViewBag.MonthlyPayroll ?? 0))
                </h4>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3">
            <div class="card-body text-center">
                <h6 class="card-title">Accounts Receivable</h6>
                <h4>
                    @(string.Format("{0:N2}", ViewBag.AccountsReceivable ?? 0))
                </h4>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-danger mb-3">
            <div class="card-body text-center">
                <h6 class="card-title">Accounts Payable</h6>
                <h4>
                    @(string.Format("{0:N2}", ViewBag.AccountsPayable ?? 0))
                </h4>
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-3">
        <div class="card text-white bg-secondary mb-3">
            <div class="card-body text-center">
                <h6 class="card-title">Pending Final Settlements</h6>
                <h4>@(ViewBag.PendingSettlements ?? 0)</h4>
            </div>
        </div>
    </div>
</div>
