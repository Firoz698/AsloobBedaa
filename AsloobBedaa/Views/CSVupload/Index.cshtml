@model AsloobBedaa.Models.CSVUser

@{
    ViewData["Title"] = "User Import";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <!-- Page Header -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="mb-1 text-primary">
                                <i class="fas fa-file-upload me-2"></i>User Import
                            </h2>
                            <p class="text-muted mb-0">Upload CSV or Excel file to import users</p>
                        </div>
                        <a asp-action="DownloadTemplate" class="btn btn-outline-primary">
                            <i class="fas fa-download me-2"></i>Download Template
                        </a>
                    </div>
                </div>
            </div>

            <!-- Alert Messages -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    <strong>Success!</strong> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <strong>Error!</strong> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Upload Section -->
            <div class="row mb-4">
                <div class="col-lg-8 col-xl-6 mx-auto">
                    <div class="card shadow-sm border-0">
                        <div class="card-body p-4">
                            <form asp-action="UploadExcel" method="post" enctype="multipart/form-data" id="uploadForm">
                                <div class="upload-area text-center p-5 border-dashed rounded" id="uploadArea">
                                    <div class="upload-icon mb-3">
                                        <i class="fas fa-cloud-upload-alt fa-4x text-primary"></i>
                                    </div>
                                    <h5 class="mb-2">Drag & Drop your file here</h5>
                                    <p class="text-muted mb-3">or click to browse</p>
                                    <input type="file"
                                           name="file"
                                           id="fileInput"
                                           accept=".csv,.xlsx,.xls"
                                           class="d-none"
                                           required>
                                    <button type="button" class="btn btn-primary" onclick="document.getElementById('fileInput').click()">
                                        <i class="fas fa-folder-open me-2"></i>Choose File
                                    </button>
                                    <div class="mt-3">
                                        <small class="text-muted">
                                            Supported formats: CSV, XLSX, XLS (Max 10MB)
                                        </small>
                                    </div>
                                </div>

                                <div id="fileInfo" class="mt-3 d-none">
                                    <div class="alert alert-info d-flex align-items-center">
                                        <i class="fas fa-file-alt fa-2x me-3"></i>
                                        <div class="flex-grow-1">
                                            <strong id="fileName"></strong>
                                            <div class="small text-muted" id="fileSize"></div>
                                        </div>
                                        <button type="button" class="btn btn-sm btn-outline-danger" onclick="removeFile()">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                </div>

                                <div class="d-grid mt-4">
                                    <button type="submit" class="btn btn-primary btn-lg" id="uploadBtn" disabled>
                                        <i class="fas fa-upload me-2"></i>Upload & Preview
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Instructions Card -->
                    <div class="card shadow-sm border-0 mt-4">
                        <div class="card-body">
                            <h6 class="card-title text-primary">
                                <i class="fas fa-info-circle me-2"></i>Instructions
                            </h6>
                            <ul class="mb-0 small">
                                <li>Download the template file to see the required format</li>
                                <li>Fill in user details: UserName, Email, Password, etc.</li>
                                <li>Existing users (matched by UserName or Email) will be updated</li>
                                <li>New users will be added to the system</li>
                                <li>Required fields: UserName and Email</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Results Section -->
            @if (Model != null && (Model.MatchedUsers.Any() || Model.NonMatchedUsers.Any()))
            {
                <div class="row">
                    <div class="col-12">
                        <div class="card shadow-sm border-0">
                            <div class="card-header bg-white border-bottom py-3">
                                <h5 class="mb-0">
                                    <i class="fas fa-list me-2"></i>Upload Preview
                                </h5>
                            </div>
                            <div class="card-body">
                                <!-- Statistics -->
                                <div class="row g-3 mb-4">
                                    <div class="col-md-4">
                                        <div class="stat-card bg-primary bg-gradient text-white p-3 rounded">
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-users fa-2x me-3"></i>
                                                <div>
                                                    <h3 class="mb-0">@(Model.MatchedUsers.Count + Model.NonMatchedUsers.Count)</h3>
                                                    <small>Total Users</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="stat-card bg-success bg-gradient text-white p-3 rounded">
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-user-plus fa-2x me-3"></i>
                                                <div>
                                                    <h3 class="mb-0">@Model.NonMatchedUsers.Count</h3>
                                                    <small>New Users</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="stat-card bg-warning bg-gradient text-white p-3 rounded">
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-user-edit fa-2x me-3"></i>
                                                <div>
                                                    <h3 class="mb-0">@Model.MatchedUsers.Count</h3>
                                                    <small>Will Be Updated</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Tabs -->
                                <ul class="nav nav-tabs mb-3" role="tablist">
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#newUsers" type="button">
                                            <i class="fas fa-user-plus me-2"></i>New Users (@Model.NonMatchedUsers.Count)
                                        </button>
                                    </li>
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#existingUsers" type="button">
                                            <i class="fas fa-user-edit me-2"></i>Existing Users (@Model.MatchedUsers.Count)
                                        </button>
                                    </li>
                                </ul>

                                <div class="tab-content">
                                    <!-- New Users Tab -->
                                    <div class="tab-pane fade show active" id="newUsers">
                                        @if (Model.NonMatchedUsers.Any())
                                        {
                                            <div class="table-responsive">
                                                <table class="table table-hover">
                                                    <thead class="table-light">
                                                        <tr>
                                                            <th>#</th>
                                                            <th>UserName</th>
                                                            <th>Email</th>
                                                            <th>Contact</th>
                                                            <th>Address</th>
                                                            <th>Role ID</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var user in Model.NonMatchedUsers.Select((u, i) => new { User = u, Index = i + 1 }))
                                                        {
                                                            <tr>
                                                                <td>@user.Index</td>
                                                                <td><strong>@user.User.UserName</strong></td>
                                                                <td>@user.User.Email</td>
                                                                <td>@user.User.Contact</td>
                                                                <td>@user.User.Address</td>
                                                                <td>
                                                                    @if (user.User.RoleId.HasValue)
                                                                    {
                                                                        <span class="badge bg-primary">@user.User.RoleId</span>
                                                                    }
                                                                    else
                                                                    {
                                                                        <span class="text-muted">-</span>
                                                                    }
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="text-center py-5">
                                                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                                <p class="text-muted">No new users to add</p>
                                            </div>
                                        }
                                    </div>

                                    <!-- Existing Users Tab -->
                                    <div class="tab-pane fade" id="existingUsers">
                                        @if (Model.MatchedUsers.Any())
                                        {
                                            <div class="alert alert-warning">
                                                <i class="fas fa-exclamation-triangle me-2"></i>
                                                These users already exist and will be <strong>updated</strong> with the new information.
                                            </div>
                                            <div class="table-responsive">
                                                <table class="table table-hover">
                                                    <thead class="table-light">
                                                        <tr>
                                                            <th>#</th>
                                                            <th>UserName</th>
                                                            <th>Email</th>
                                                            <th>Contact</th>
                                                            <th>Address</th>
                                                            <th>Role ID</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var user in Model.MatchedUsers.Select((u, i) => new { User = u, Index = i + 1 }))
                                                        {
                                                            <tr>
                                                                <td>@user.Index</td>
                                                                <td><strong>@user.User.UserName</strong></td>
                                                                <td>@user.User.Email</td>
                                                                <td>@user.User.Contact</td>
                                                                <td>@user.User.Address</td>
                                                                <td>
                                                                    @if (user.User.RoleId.HasValue)
                                                                    {
                                                                        <span class="badge bg-primary">@user.User.RoleId</span>
                                                                    }
                                                                    else
                                                                    {
                                                                        <span class="text-muted">-</span>
                                                                    }
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="text-center py-5">
                                                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                                <p class="text-muted">No existing users to update</p>
                                            </div>
                                        }
                                    </div>
                                </div>

                                <!-- Import Button -->
                                <div class="d-flex justify-content-end gap-2 mt-4">
                                    <a asp-action="Index" class="btn btn-outline-secondary">
                                        <i class="fas fa-times me-2"></i>Cancel
                                    </a>
                                    <form asp-action="ImportUsers" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-success btn-lg" onclick="return confirm('Are you sure you want to import these users?')">
                                            <i class="fas fa-check me-2"></i>Confirm Import
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .border-dashed {
            border: 2px dashed #dee2e6;
            transition: all 0.3s ease;
        }

            .border-dashed:hover {
                border-color: #0d6efd;
                background-color: #f8f9fa;
            }

        .upload-area.drag-over {
            border-color: #0d6efd;
            background-color: #e7f1ff;
        }

        .upload-icon {
            transition: transform 0.3s ease;
        }

        .upload-area:hover .upload-icon {
            transform: translateY(-5px);
        }

        .stat-card {
            transition: transform 0.3s ease;
        }

            .stat-card:hover {
                transform: translateY(-5px);
            }

        .table-responsive {
            border-radius: 8px;
        }

        .card {
            border-radius: 12px;
            overflow: hidden;
        }

        .nav-tabs .nav-link {
            border: none;
            border-bottom: 3px solid transparent;
            color: #6c757d;
        }

            .nav-tabs .nav-link.active {
                border-bottom-color: #0d6efd;
                color: #0d6efd;
                font-weight: 600;
            }

        .table thead th {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.875rem;
            letter-spacing: 0.5px;
        }

        .table tbody tr {
            transition: all 0.2s ease;
        }

            .table tbody tr:hover {
                background-color: #f8f9fa;
                transform: scale(1.01);
            }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .stat-card h3

        {
            font-size: 1.5rem;
        }

        .stat-card i {
            font-size: 1.5rem !important;
        }

        .table {
            font-size: 0.875rem;
        }

        }
    </style>
}

@section Scripts {
    <script>
        // File input handling
        const fileInput = document.getElementById('fileInput');
        const uploadArea = document.getElementById('uploadArea');
        const fileInfo = document.getElementById('fileInfo');
        const fileName = document.getElementById('fileName');
        const fileSize = document.getElementById('fileSize');
        const uploadBtn = document.getElementById('uploadBtn');

        fileInput.addEventListener('change', function(e) {
            if (this.files.length > 0) {
                const file = this.files[0];
                displayFileInfo(file);
            }
        });

        // Drag and drop functionality
        uploadArea.addEventListener('dragover', function(e) {
            e.preventDefault();
            uploadArea.classList.add('drag-over');
        });

        uploadArea.addEventListener('dragleave', function(e) {
            e.preventDefault();
            uploadArea.classList.remove('drag-over');
        });

        uploadArea.addEventListener('drop', function(e) {
            e.preventDefault();
            uploadArea.classList.remove('drag-over');

            if (e.dataTransfer.files.length > 0) {
                fileInput.files = e.dataTransfer.files;
                displayFileInfo(e.dataTransfer.files[0]);
            }
        });

        function displayFileInfo(file) {
            fileName.textContent = file.name;
            fileSize.textContent = formatFileSize(file.size);
            fileInfo.classList.remove('d-none');
            uploadBtn.disabled = false;
        }

        function removeFile() {
            fileInput.value = '';
            fileInfo.classList.add('d-none');
            uploadBtn.disabled = true;
        }

        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
        }

        // Form validation
        document.getElementById('uploadForm').addEventListener('submit', function(e) {
            if (!fileInput.files.length) {
                e.preventDefault();
                alert('Please select a file to upload.');
            }
        });

        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}
